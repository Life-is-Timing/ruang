<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/leftArrow"
            android:layout_width="44dp"
            android:layout_height="match_parent"
            android:maxWidth="30dp"
            android:maxHeight="30dp"
            android:src="@drawable/left_arrow" />

        <!-- 현재 화면 제목 텍스트 -->
        <TextView
            android:id="@+id/header_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:textSize="25dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:text="새 글 작성"/>

        <Space
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <ImageView
            android:id="@+id/check"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:layout_marginRight="16dp"
            android:src="@drawable/check" />

    </LinearLayout>


    <!-- Title Input -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="제목"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/black"/>

        <EditText
            android:id="@+id/write_title"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:layout_marginTop="8dp"
            android:singleLine="true"
            android:maxLines="1"
            android:maxLength="20"
            android:padding="8dp"
            android:background="@drawable/write_boarder"/>
        <!--        single은 한줄 입력 , multi는 여러줄 가능-->

    </LinearLayout>


    <!-- Date -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="현재시간은?"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/dmli_show_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#039be5"
            android:layout_marginTop="4dp"
            android:textStyle="bold"
            android:textSize="12sp"
            android:text="2023/11/14 화요일"/>

    </LinearLayout>


    <!-- Emotion -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="오늘의 상태"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/black"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <!-- Radio button Group , 라디오 버튼들을 모아놓은 그룹 -->
            <RadioGroup
                android:id="@+id/radio_emotions"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:layout_marginTop="8dp"
                android:background="@color/white"
                android:orientation="horizontal">


                <RadioButton
                    android:id="@+id/radio_happy"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:button="@null"
                    android:background="@drawable/happy"/>

                <RadioButton
                    android:id="@+id/radio_laugh"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:button="@null"
                    android:layout_marginLeft="15dp"
                    android:background="@drawable/laugh"/>

                <RadioButton
                    android:id="@+id/radio_bored"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:button="@null"
                    android:layout_marginLeft="15dp"
                    android:background="@drawable/bored"/>

                <RadioButton
                    android:id="@+id/radio_sad"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:button="@null"
                    android:layout_marginLeft="15dp"
                    android:background="@drawable/sad"/>

                <RadioButton
                    android:id="@+id/radio_angry"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:button="@null"
                    android:layout_marginLeft="15dp"
                    android:background="@drawable/angry"/>

            </RadioGroup>


            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />


            <RelativeLayout
                android:layout_width="63dp"
                android:layout_height="63dp">

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/logo4"
                    android:scaleType="fitXY"
                    android:clickable="true"
                    android:onClick="playVideo" />

                <VideoView
                    android:id="@+id/videoView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:visibility="gone" />

            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>


    <!-- Content -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="오늘의 여행은?"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/black"/>

        <EditText
            android:id="@+id/dmli_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="top|left"
            android:inputType="textMultiLine"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:layout_marginTop="8dp"
            android:singleLine="true"
            android:lines="15"
            android:maxLines="15"
            android:maxLength="120"
            android:scrollbars="vertical"
            android:scrollHorizontally="false"
            android:overScrollMode="always"
            android:padding="8dp"
            android:background="@drawable/write_boarder"/>

    </LinearLayout>

</LinearLayout>